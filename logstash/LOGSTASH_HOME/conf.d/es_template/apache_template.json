{
  "template": "*",
  "version": 1,
  "settings": {
    "index": {
      "refresh_interval": "5s",
      "analysis": {
        "analyzer": {
          "path_analyzer": {
            "tokenizer": "path_tokenizer"
          },
          "url_analyzer": {
            "tokenizer": "url_tokenizer"
          }
        },
        "tokenizer": {
          "path_tokenizer": {
            "type": "path_hierarchy",
            "delimiter": "/",
            "skip": 0
          },
          "url_tokenizer": {
            "type": "path_hierarchy",
            "delimiter": "/",
            "skip": 2
          } 
        }
      }
    }
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "message_field": {
            "path_match": "message",
            "mapping": {
              "norms": false,
              "type": "text"
            },
            "match_mapping_type": "string"
          }
        },
        {
          "string_fields": {
            "mapping": {
              "norms": false,
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword"
                }
              }
            },
            "match_mapping_type": "string",
            "match": "*"
          }
        }
      ],
      "_all": {
        "enabled": true
      },
      "properties": {
        "duration": {
          "type": "long",
          "fields": {
            "keyword":{
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "responsesize": {
          "type": "long",
          "fields": {
            "keyword":{
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "request": {
          "type": "text",
		  "analyzer": "path_analyzer",
          "fields": {
            "keyword":{
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "referrer": {
          "type": "text",
          "fields": {
            "keyword":{
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "geoip": {
          "type": "object",
          "properties": {
            "location": {
              "type": "geo_point",
              "fields": {
                "keyword":{
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            },
            "country_name": {
              "type": "text",
              "fields": {
                "keyword":{
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            },
            "city_name": {
              "type": "text",
              "fields": {
                "keyword":{
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        },
		"forwardip": {
		  "type": "ip",
		  "fields": {
			"keyword":{
			  "type": "keyword",
			  "ignore_above": 256
			}
		  }
		},
        "@version": {
          "type": "integer",
          "fields": {
            "keyword":{
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  }
}

