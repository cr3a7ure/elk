{
  "template": "swissbib-*",
  "version": 1,
  "settings": {
    "index": {
      "refresh_interval": "5s",
      "analysis": {
        "analyzer": {
          "path": {
            "type": "custom",
            "tokenizer": "path_hierarchy"
          },
          "domain": {
            "tokenizer": "domain"
          }
        },
        "tokenizer": {
          "path_hierarchy": {
            "type": "path_hierarchy",
            "delimiter": "/",
            "skip": 2
          },
          "domain": {
            "type": "pattern",
            "pattern": "(http[s]?:\\/\\/|\\/.*)"
          }
        }
      }
    }
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "message_field": {
            "path_match": "message",
            "mapping": {
              "norms": false,
              "type": "text"
            },
            "match_mapping_type": "string"
          }
        },
        {
          "string_fields": {
            "mapping": {
              "norms": false,
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword"
                }
              }
            },
            "match_mapping_type": "string",
            "match": "*"
          }
        }
      ]
      "properties": {
        "@version": {
          "type": "integer"
        },
        "trackurl": {
            "type": "text",
            "fields": {
                "path": {
                    "type": "text",
                    "analyzer": "path"
                },
                "domain": {
                    "type": "text",
                    "analyzer": "domain"
                }
            }
        },
        "duration": {
          "type": "long",
          "fields": {
            "keyword":{
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "responsesize": {
          "type": "long",
          "fields": {
            "keyword":{
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "geoip": {
          "type": "object",
          "properties": {
            "location": {
              "type": "geo_point",
              "fields": {
                "keyword":{
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            },
            "country_name": {
              "type": "text",
              "fields": {
                "keyword":{
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            },
            "city_name": {
              "type": "text",
              "fields": {
                "keyword":{
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        },
        "forwardip": {
          "type": "ip"
        }
      }
    }
  }
}
